	@await Component.InvokeAsync("UserNavbar")



	<div class="container">
		<div class="row">
			<!-- Filtreleme -->
			<aside class="filters col-md-3">
				<h3>Filtreler</h3>


				<button class="accordion filter-group">Kalkış Saati</button>
				<div class="panel">
					<label class="tk"><input type="checkbox"> Gece</label>
					<label class="tk"><input type="checkbox"> Sabah</label>
					<label class="tk"><input type="checkbox"> Öğle</label>
					<label class="tk"><input type="checkbox"> Akşam</label>
				</div>

				<button class="accordion filter-group">Oturma Düzeni</button>
				<div class="panel">
					<label class="tk"><input type="checkbox"> 1+1 Koltuk</label>
					<label class="tk"><input type="checkbox"> 2+1 Koltuk</label>
					<label class="tk"><input type="checkbox"> 2+2 Koltuk</label>

				</div>

				<button class="accordion filter-group">Firma</button>
				<div class="panel">
					<label class="tk"><input type="checkbox"> Pamukkale</label>
					<label class="tk"><input type="checkbox"> Nilüfer</label>
					<label class="tk"><input type="checkbox"> Metro</label>
					<label class="tk"><input type="checkbox"> Kamil Koç</label>
				</div>

				<button class="accordion filter-group">Fiyat Aralığı</button>
				<div class="panel">
					<div class="price-range">
						<p>100tl</p>
						<input type="range" min="100" max="1000">
						<p>1000tl</p>
					</div>
				</div>

				<button class="accordion filter-group">Kalkış Yeri</button>
				<div class="panel">
					<label class="tk"><input type="checkbox"> İstanbul</label>
					<label class="tk"><input type="checkbox"> İzmir</label>
					<label class="tk"><input type="checkbox"> Çanakkale</label>
					<label class="tk"><input type="checkbox"> Kocaeli</label>
					<label class="tk"><input type="checkbox"> Bandırma</label>
				</div>

				<button class="accordion filter-group">Varış Yeri</button>
				<div class="panel">
					<label class="tk"><input type="checkbox"> İstanbul</label>
					<label class="tk"><input type="checkbox"> İzmir</label>
					<label class="tk"><input type="checkbox"> Çanakkale</label>
					<label class="tk"><input type="checkbox"> Kocaeli</label>
					<label class="tk"><input type="checkbox"> Bandırma</label>
				</div>

			</aside>

			<!-- Bilet Kartları -->
			<main class="tickets col-md-9">
				<h2>Mevcut Biletler</h2>
				<!-- Bilet Card -->
				@foreach (var item in Model)
				{
					<div class="ticket-card">
						<div class="column firm">
							<img class="logo" src="@item.CompanyCoverImageUrl" alt="">
							<p>@item.Departure → @item.Destination </p>
						</div>
						<div class="column seating">
							<p>2+1</p>
						</div>
						<div class="column time">
							<p>@item.DepartureDate.TimeOfDay</p>
							<p>6 saat</p>
						</div>
						<div class="column price">
							<p>@item.TicketPrice TL</p>
						</div>
						<div class="column button">
							<a asp-controller="Bus" asp-action="Reservation" asp-route-tripId="@item.Id">Seç</a>			@* BU KISIM'DAKİ BUTON YERİNE A ETİKETİ KOYULDU *@
						</div>
					</div>
				}
			</main>
		</div>
	</div>


