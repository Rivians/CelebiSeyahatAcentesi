@using CelebiSeyehat.UI.ViewModels.Login
@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="/CelebiSeyehat/css/utils.css">
    <link rel="stylesheet" href="/CelebiSeyehat/css/style.css">
    
</head>
<body style="background-image: url('/CelebiSeyehat/img/paris.jpeg'); background-size: cover; background-repeat: no-repeat;">

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a href="home.html" class="navbar-brand fs-1 fw-bold me-4">triply</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="#">Uçak</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Otel</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Otobüs</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Tren</a></li>
                </ul>
                    
                
            </div>
        </div>
    </nav>

    <div class="container  flex-column align-items-center min-vh-100">
        <div class="card-container">
            <!-- Giriş Yap -->
            <div class="card card-custom">
                <div class="form-container p-3">
                    <h2>Giriş Yap</h2>
                    <form method="post">
                        <div class="mb-3">
                            <input type="email" class="form form-control" asp-for="Email" placeholder="E-posta" required>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form form-control" asp-for="Password" placeholder=" Şifre" required>
                        </div>                        
                        <a href="/Login/ForgetPassword/" class="mt-2">Şifrenizi mi unuttunuz?</a>                        
                        <button type="submit" class="btn w-100 ">Giriş Yap</button>
                        <p class="mt-3">Hesabınız yok mu? <a href="/Register/Index">Kayıt Ol</a></p>
@*                         <p class="mt-2">Admin olarak  <a href="alogin.html">Giriş yap</a></p>
 *@                        
                    </form>
                </div>
            </div>
        </div>
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
