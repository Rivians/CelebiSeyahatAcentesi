        <!-- Search Card -->
        <div class="container position-absolute top-50 start-50 translate-middle ">

            <h1 class="text-center text-white overlay-text ">Nereye gitmek istersin?</h1><br>
            <!-- Butonlar -->
            <div class="button-group mb-3 ">
                <button class="btn btn-primary " data-type="ucak">Uçak bileti</button>
                <button class="btn btn-primary " data-type="otel">Otel</button>
                <button class="btn btn-primary " data-type="otobus">Otobüs</button>
                <button class="btn btn-primary " data-type="tren">Tren</button>
